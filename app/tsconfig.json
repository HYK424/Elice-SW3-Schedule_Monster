{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["ES6", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES5",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build"]
}
